import os
from task import Task

FILENAME = "tasks.txt"

tasks = []

def read_list():
    if not os.path.exists(FILENAME):
        return
    
    with open(FILENAME) as f:
        for line in f:
            tasks.append(Task(line.strip()))
                
def write_list():
    with open(FILENAME, "w") as f:
        for task in tasks:
            f.write(task.to_line() + "\n")


def clear_screen():
    os.system("clear")

def show_menu():
    print("\nTodo List")
    print("======================")
    print("1. Add task")
    print("2. Show tasks")
    print("3. Exit")
    
read_list()

while True:
    clear_screen()
    show_menu()
    choice = input("Choose an option: ")

    if choice == "1":
        clear_screen()
        task_name = input("Enter task: ")
        tasks.append(Task(task_name))
        print("Task added!")

    elif choice == "2":
        clear_screen()
        if not tasks:
            print("No tasks yet.")
        else:
            for i, task in enumerate(tasks, start=1):
                print(f"{i}, {task}")
        input("\nPress Enter to continue")

    elif choice == "3":
        write_list()
        print("Goodbye!")
        break

    else:
        print("Invalid choice.")

