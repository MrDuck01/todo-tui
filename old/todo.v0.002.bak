import os
from task import Task
import storage


storage.init_db()
tasks = storage.get_all_tasks()


def clear_screen():
    os.system("clear")

def show_menu():
    print("\nTodo List")
    print("======================")
    print("1. Add task")
    print("2. Show tasks")
    print("3. Exit")

while True:
    clear_screen()
    show_menu()
    choice = input("Choose an option: ")

    if choice == "1":
        clear_screen()
        task_name = input("Enter task: ")
        task = Task(task_name)
        storage.insert_task(task)
        tasks.append(task)
        print("Task added!")

    elif choice == "2":
        clear_screen()
        if not tasks:
            print("No tasks yet.")
        else:
            for i, task in enumerate(tasks, start=1):
                print(f"{i}, {task}")
        input("\nPress Enter to continue")

    elif choice == "3":
        print("Goodbye!")
        break

    else:
        print("Invalid choice.")

